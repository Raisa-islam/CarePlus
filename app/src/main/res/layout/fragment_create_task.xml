            </com.google.android.material.textfield.TextInputLayout>-->


        <TimePicker
            android:id="@+id/TimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/alarmCB"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_baseline_access_alarms_24"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="150dp"

                    android:id="@+id/notifyCB"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_baseline_circle_notifications_24"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <!--  <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:background="@drawable/addtask"
                  android:id="@+id/addtaskDatabase"/>-->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btnAdd"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:lottie_rawRes="@raw/addbutton" />
        </LinearLayout>



    </LinearLayout>
    /LinearLayout>
</ScrollView>